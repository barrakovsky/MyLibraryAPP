<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rev_item_user_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/rev_item_date_tx"
            android:text="@string/rev_item_user"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rev_item_date_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/rev_item_date"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/rev_item_main_tx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rev_item_user_tx"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:text="@string/rev_item_review"
            android:textSize="18sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/rev_item_edit_ibut"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rev_item_main_tx"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#00008577"
            android:clickable="true"
            android:contentDescription="@string/rev_item_imgbut"
            android:contextClickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_editprofile" />

        <TextView
            android:id="@+id/rev_item_editdate_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rev_item_edit_ibut"
            android:layout_alignParentEnd="true"
            android:text="@string/rev_item_date" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>